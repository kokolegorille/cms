<div>
  <h1><%= gettext "Sign in" %></h1>
  
  <%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
    <div>
      <%= text_input f, :name, placeholder: gettext("Username") %>
    </div>
    <div>
      <%= password_input f, :password, placeholder: gettext("Password") %>
    </div>
    <%= submit gettext("Sign in") %>
  <% end %>
</div>